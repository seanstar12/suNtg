{
  "name": "NTG Tool",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Helpful functions for the NTG domain.",
  "options_page": "options.html",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": { "scripts": ["js/background.js","js/jquery-1.8.3.min.js"]},
  "page_action": {
    "default_icon": "img/icon.png",
    "default_popup": "pop.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "background",
    "idle",
    "webNavigation",
    "webRequest",
    "alarms",
    "cookies",
    "https://ntg.missouristate.edu/*",
    "storage" 
  ],
  "web_accessible_resources": [
    "js/inject.js",
    "js/jquery-1.8.3.min.js",
    "img/icon48.png"
  ],
  "content_scripts": [
    {
      "js": ["js/inject.js"],
      "css": ["css/cssinject.css"],
      "matches": ["https://ntg.missouristate.edu/*"],
      "run_at": "document_end"
    }
  ]
}
