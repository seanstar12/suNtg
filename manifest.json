{
  "name": "NTG Tool",
  "version": "0.3.50",
  "manifest_version": 2,
  "description": "Helpful functions for the NTG domain.",
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": { 
    "page": "background.html"
  },
  "page_action": {
    "default_icon": "images/icon.png",
    "default_popup": "pop.html"
  },
  "permissions": [
    "tabs", "https://ntg.missouristate.edu/*",
    "notifications",
    "background",
    "idle",
    "webNavigation",
    "webRequest",
    "alarms",
    "cookies",
    "storage" 
  ],
  "web_accessible_resources": [
    "js/inject.js",
    "background.html",
    "js/jquery-1.8.3.min.js",
    "js/functions.js",
    "js/include.js",
    "images/icon48.png",
    "css/ntgTool.css",
    "images/calvin.jpg",
    "css/cssinject.css"
  ],
  "content_scripts": [
    {
      "css": ["css/cssinject.css"],
      "js": ["js/include.js","js/functions.js","js/inject.js"],
      "matches": ["https://ntg.missouristate.edu/*"],
      "run_at": "document_start"
    },
    {
      "css": ["css/ntgTool.css"],
      "js": ["js/include.js","js/functions.js","js/main.js"],
      "matches": ["https://ntg.missouristate.edu/*"],
      "run_at": "document_end"
    }
  ]
}
