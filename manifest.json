{
  "name": "NTG Tool -- Redux",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Helpful functions for the NTG domain.",
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": { 
    "page": "background.html"
  },
  "page_action": {
    "default_icon": "images/icon.png"
  },
  "permissions": [
    "tabs", "https://ntg.missouristate.edu/*",
    "notifications",
    "background",
    "idle",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "alarms",
    "cookies",
    "storage" 
  ],
  "web_accessible_resources": [
    "js/jquery-1.8.3.min.js",
    "js/bootstrap.js",
    "js/functions.js",
    "js/jquery-ui.min.js",
    "js/jquery.form.js",
    "js/db.json",
    "css/bootstrap.css",
    "css/clear.css",
    "css/ntgTool.css",
    "images/glyphicons-halflings-white.png",
    "images/cubone.png"
  ],
  "content_scripts": [
    {
      "js": ["js/jquery-1.8.3.min.js","js/functions.js","js/include.js","js/onStart.js"],
      "matches": ["https://ntg.missouristate.edu/*"],
      "css":["css/clear.css","css/ntgTool.css"],
      "run_at": "document_start"
    },
    {
      "js": ["js/jquery-1.8.3.min.js","js/functions.js","js/bootstrap.js","js/onEnd.js"],
      "matches": ["https://ntg.missouristate.edu/*"],
      "run_at": "document_end"
    }
  ]
}
